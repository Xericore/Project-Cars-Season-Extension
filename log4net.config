<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="DefaultLogger" />
    <appender-ref ref="DebugLogger" />
  </root>
  <appender name="DefaultLogger" type="log4net.Appender.RollingFileAppender">
    <file value="ProjectCarsSeasonExtension.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="DebugLogger" type="log4net.Appender.FileAppender">
    <file value="PCarsExtDebugging.log" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>
</log4net>