<Window x:Class="ProjectCarsSeasonExtension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCarsSeasonExtension"
        mc:Ignorable="d"
        Title="Project Cars Season Extension" Height="800" Width="1280"
        Initialized="Window_Initialized"
        SourceInitialized="Window_SourceInitialized"
        Closing="Window_Closing"
        Icon="./Assets/Project Cars.png"
        AllowsTransparency="True" Opacity="0.85" WindowStyle="None">
    
    <TabControl>

        <TabItem Name="ChampionshipTab" Header="Championship">
            <Frame Name="PlayerResultsFrame"/>
        </TabItem>

        <TabItem Name="SeasonTab" Header="Season">
            <Frame Name="SeasonViewFrame"/>
        </TabItem>

        <TabItem Name="PlayerSelectionTab" Header="Player Selection">
            <Frame Name="PlayerSelectionFrame"/>
        </TabItem>

        <TabItem Name="ProjectCarsLiveTab" Header="Project Cars Live">
            <Frame Name="ProjectCarsLiveFrame"/>
        </TabItem>

    </TabControl>

</Window>
