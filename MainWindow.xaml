<Window x:Class="ProjectCarsSeasonExtension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCarsSeasonExtension"
        mc:Ignorable="d"
        Title="Project Cars Season Extension" Height="800" Width="1280"
        Initialized="Window_Initialized"
        SourceInitialized="Window_SourceInitialized"
        Closing="Window_Closing"
        Icon="./Assets/Project Cars.png" Topmost="True"
        AllowsTransparency="True" Opacity="0.85" WindowStyle="None">
    
    <TabControl>

        <TabItem Name="ChampionshipTab" Header="Championship">
            <Frame Name="PlayerResultsFrame" Source="/Views/ChampionshipView.xaml"/>
        </TabItem>

        <TabItem Name="ChallengeTab" Header="Challenges">
            <Frame Name="ChallengeViewFrame" Source="/Views/ChallengeView.xaml"/>
        </TabItem>

        <TabItem Name="HighscoreTab" Header="Highscore">
            <Frame Name="HighscoreViewFrame" Source="/Views/HighscoreView.xaml"/>
        </TabItem>

        <TabItem Name="PlayerSelectionTab" Header="Player Selection">
            <Frame Name="PlayerSelectionFrame" Source="/Views/PlayerSelectionView.xaml"/>
        </TabItem>

    </TabControl>

</Window>
